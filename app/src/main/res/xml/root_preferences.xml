<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Appearance">

        <ListPreference
            app:defaultValue="8"
            app:entries="@array/font_entries"
            app:entryValues="@array/font_values"
            app:key="font_size"
            app:title="Font Size"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Flashcard">

        <ListPreference
            app:defaultValue="3"
            app:entries="@array/card_appearance_rate_entries"
            app:entryValues="@array/card_appearance_rate_values"
            app:key="card_appearance_rate"
            app:title="Card Appearance Rate (Smart Learn)"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

</PreferenceScreen>
